{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@common/*": ["common/src/*"]
      },
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"]
  }
  